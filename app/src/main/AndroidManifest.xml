<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.capstone.potlatch" >

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name="com.capstone.potlatch.base.App"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme"
        android:uiOptions="splitActionBarWhenNarrow" >
        <activity
            android:name="com.capstone.potlatch.ActivityMain"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.capstone.potlatch.ActivitySettings"
            android:label="@string/title_activity_settings"
            android:parentActivityName="com.capstone.potlatch.ActivityMain" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.capstone.potlatch.ActivityMain" />
        </activity>
        <activity
            android:name=".ActivityCreateUpdateGift"
            android:label="@string/activity_create_update_gift"
            android:parentActivityName="com.capstone.potlatch.ActivityMain" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.capstone.potlatch.ActivityMain" />
        </activity>
    </application>

</manifest>
